<div class="move-card ability-card">
  <div class="item-draggable ability-info item-name" data-item-id="{{_id}}">
    <a class="move-roll" title="{{localize 'k4lt.RollMove'}}">
      <img src="{{img}}" title="{{name}}" /> {{name}}
    </a>
   
    {{#if system.hasTokens}}
      {{#if (gte system.tokens 0)}}
        <span class="ability-column">
          <br />{{localize "k4lt.Edge"}}:
          <a class="token-add" title="{{localize 'k4lt.AddEdge'}}">
            <i class="far fa-plus-square"></i>
          </a>
          {{system.tokens}}
          {{#if (gte system.tokens 1)}}
            <a class="token-spend" title="{{localize 'k4lt.SpendEdge'}}">
              <i class="far fa-minus-square"></i>
            </a>
          {{/if}}
        </span>
      {{/if}}
    {{/if}}

     <a class="item-control item-show" title="{{localize 'k4lt.ShowItem'}}">
      <i class="far fa-comment-alt"></i>
    </a>
    <a class="item-control item-delete" title="{{localize 'k4lt.DeleteItem'}}">
      <i class="fas fa-trash"></i>
    </a>
    <a class="item-control item-edit" title="{{localize 'k4lt.EditItem'}}">
      <i class="fas fa-edit"></i>
    </a>

  </div>
</div>